@import 'nib'

.profile-image
    vertical-align middle
    border-radius 35px
    margin-right 10px
    box-shadow 0 0 5px #e3e3e3
    border solid 3px white

.box
    position relative
    margin 15px 0
    padding 39px 19px 14px
    background-color #fff
    border 1px solid #ddd
    border-radius(4px)
    &:hover
        .editComment
            display inline-block !important
    .editComment
        display none !important


.box:after
    content "Comment"
    position absolute
    top -1px
    left -1px
    padding 3px 7px
    font-size 12px
    font-weight bold
    background-color #f5f5f5
    border 1px solid #ddd
    color #9da0a4
    -webkit-border-radius 4px 0 4px 0
    -moz-border-radius 4px 0 4px 0
    border-radius 4px 0 4px 0

.navbar-inner
    border-radius(0)

.lead
    margin-bottom 10px !important

span.count
    font-size 32px

.avatar
    border-radius(10px)
    vertical-align top

.bubble
    border 1px solid rgb(233, 233, 233)
    background rgb(246, 246, 246)
    border-radius 3px
    display block
    padding 5px
    color black

.spacer
    height 5px
    margin 3px 0px 0px

.arrow
    width 0px
    height 0px
    border-left 5px solid transparent
    border-right 5px solid transparent
    border-bottom 5px solid rgb(233, 233, 233)
    margin-left 6px

.ago
    color rgb(153, 153, 153)
    font-size 11px
    font-style italic

.fromUrl
    a
        word-break break-all

.twitter-signin
    background-image url('/images/twitter-bird-white.png')
    background-size 25px 25px
    background-repeat no-repeat
    background-position left middle
    padding-left 25px

@media(min-width: 960px)
    .row-fluid:nth-child(1)
        padding-top 60px

@media(max-width: 960px)
    .nav.affix
        position relative

@media(max-width: 320px)
    .profile-image
        border none
    .page-header
        h1
            font-size 22px